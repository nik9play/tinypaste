{
  "version": 2,
  "builds": [
    {
      "src": "nuxt.config.js",
      "use": "@nuxtjs/now-builder",
      "config": {
        "serverFiles": ["api/**"]
      }
    }
  ],
  "env": {
    "MONGODB_HOST": "@mongodb_host",
    "MONGODB_LOGIN": "@mongodb_login",
    "MONGODB_PASS": "@mongodb_pass"
  }
}